<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <ul>
            <% messages.map((message) => { %> 
                <li>
                    <div>
                        <h1><%= message.user %></h1>
                        <h2><%= message.date %></h2>
                        <p><%= message.text %></p>
                    </div>
                </li> 
            <% }) %>
    </ul>
  </body>
</html>
