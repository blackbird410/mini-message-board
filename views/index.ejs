<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <h1 class="font-normal"><%= title %></h1>
        <a href="/new" id="new-message">Add a new message</a>
        <ul class="message-list">
            <% messages.map((message) => { %> 
                <li>
                    <div class="message-wrapper">
                        <h3 class="message-author"><%= message.username %></h3>
                        <span class="message-date"><%= message.added %></span>
                        <p class="message-text"><%= message.text %></p>
                    </div>
                    <div class="btn-wrapper">
                        <a href="/message/<%= message.id %>" class="open-message-btn">Open</a>
                        <a href="/delete/<%= message.id %>" class="delete-message-btn">Delete</a>
                    </div>
                </li> 
            <% }) %>
        </ul>
    </body>
</html>
